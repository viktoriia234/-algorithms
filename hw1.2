class Solution(object):
    def numberOfMatches(self, n):
        matches = 0 
        m = 0 
        while (n > 1): 
            if n % 2 == 0: 
                matches = n / 2
                n =  n / 2
            elif n % 2 != 0:
                matches = (n - 1) / 2
                n = (n - 1) / 2 + 1
            m = m + matches 
        return m 
